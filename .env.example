# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lehelp_db
POSTGRES_USER=lehelp_user
POSTGRES_PASSWORD=changeme_secure_password

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/lehelp_docs
MONGODB_USER=lehelp_mongo_user
MONGODB_PASSWORD=changeme_secure_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_secure_password

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme_secure_password

# JWT Authentication
JWT_SECRET=changeme_very_long_random_secret_key_here
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=changeme_another_long_random_secret
REFRESH_TOKEN_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=changeme_32_byte_encryption_key_here
MASTER_KEY=changeme_master_encryption_key_here

# Email Service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@lehelp.org
SMTP_PASSWORD=changeme_email_password
SMTP_FROM=Legal Aid Platform <noreply@lehelp.org>

# Storage
STORAGE_PROVIDER=s3
S3_BUCKET=lehelp-documents
S3_REGION=eu-central-1
S3_ACCESS_KEY=changeme_access_key
S3_SECRET_KEY=changeme_secret_key

# AI Services
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=changeme_ai_service_key
OPENAI_API_KEY=changeme_optional_openai_key

# Translation API
DEEPL_API_KEY=changeme_deepl_api_key

# Video Conferencing
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=changeme_jitsi_app_id
JITSI_APP_SECRET=changeme_jitsi_secret

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
SESSION_SECRET=changeme_session_secret_key
COOKIE_DOMAIN=localhost
SECURE_COOKIES=false

# Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_PATTERN_RECOGNITION=false
ENABLE_OFFLINE_MODE=true

# Compliance
DATA_RETENTION_DAYS=365
GDPR_ENABLED=true
CCPA_ENABLED=true
