# Production Environment Configuration
# DO NOT commit this file with real values!
# Use your deployment platform's environment variables instead

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database - PostgreSQL (Use managed PostgreSQL service)
POSTGRES_HOST=${DATABASE_HOST}
POSTGRES_PORT=5432
POSTGRES_DB=${DATABASE_NAME}
POSTGRES_USER=${DATABASE_USER}
POSTGRES_PASSWORD=${DATABASE_PASSWORD}
DATABASE_URL=${DATABASE_URL}

# Redis (Use managed Redis service)
REDIS_URL=${REDIS_URL}
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TLS=true

# JWT Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=${REFRESH_TOKEN_SECRET}
REFRESH_TOKEN_EXPIRATION=7d

# Encryption (CHANGE IN PRODUCTION!)
ENCRYPTION_KEY=${ENCRYPTION_KEY}
MASTER_KEY=${MASTER_KEY}

# Email Service (Use SendGrid, Mailgun, or AWS SES)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=LEHELP Platform <noreply@lehelp.org>
SMTP_SECURE=true

# Storage (Use AWS S3, Cloudflare R2, or Backblaze B2)
STORAGE_PROVIDER=s3
S3_ENDPOINT=${S3_ENDPOINT}
S3_BUCKET=${S3_BUCKET}
S3_REGION=${S3_REGION}
S3_ACCESS_KEY=${S3_ACCESS_KEY}
S3_SECRET_KEY=${S3_SECRET_KEY}
S3_FORCE_PATH_STYLE=false

# AI Services
AI_SERVICE_URL=${AI_SERVICE_URL}
AI_API_KEY=${AI_API_KEY}

# Monitoring & Logging
SENTRY_DSN=${SENTRY_DSN}
LOG_LEVEL=warn

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=${FRONTEND_URL}
SESSION_SECRET=${SESSION_SECRET}
COOKIE_DOMAIN=${COOKIE_DOMAIN}
SECURE_COOKIES=true
TRUST_PROXY=true

# Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_PATTERN_RECOGNITION=false
ENABLE_OFFLINE_MODE=true

# Compliance
DATA_RETENTION_DAYS=365
GDPR_ENABLED=true
CCPA_ENABLED=true
